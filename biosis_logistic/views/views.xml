<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bio_cont_sale_order_view" model="ir.ui.view">
            <field name="name">bio_cont.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="priority">17</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_order']" position="replace">
                    <field name="date_order" string="Fecha de creaciÃ³n"/>
                </xpath>
                <xpath expr="//field[@name='pricelist_id']" position="replace">
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="after">
                    <field name="tipo" invisible="1"/>
                </xpath>

                <field name="partner_id" position="after">
                    <field name="actividad"/>
                    <field name="via"/>
                    <field name="modalidad" attrs="{'invisible': [('via','!=', 'M')], 'required': [('via','=','M')]}"/>
                    <field name="tipo_contenedor_id" attrs="{'invisible': [('modalidad','!=', 'FCL')], 'required': [('modalidad','=','FCL')]}"/>
                    <field name="tipo_contenedor_name" invisible="1"/>
                    <field name="deposito_id" required="1" attrs="{'invisible': [('tipo_contenedor_id','=',False),('modalidad','=','FCL')]}"/>
                    <field name="pricelist_id" string="Lista de precio"/>
                    <field name="valor_tipo_cambio"/>
                </field>

                <xpath expr="//field[@name='payment_term_id']" position="replace">
                    <field name="payment_term_id"/>
                    <field name="modalidad_pago_id"/>
                    <field name="linea_id" attrs="{'invisible': [('tipo_contenedor_id','=',False)]}"/>
                    <field name="agente_portuario_id" attrs="{'invisible': [('linea_id','=',False)]}" domain="[('linea_naviera_ids','=',linea_id),('tipo_contenedor_ids','=',tipo_contenedor_id)]"/>
                    <field name="vacio_id" attrs="{'invisible': [('linea_id','=',False)]}" />
                </xpath>

            </field>
        </record>
    </data>
</odoo>